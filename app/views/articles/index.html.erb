<h1>Articles</h1>

<%= link_to 'New article', new_article_path %><br>
<% @articles.each do |article| %>
    <div>
        <h3><%= article.title %></h3>
        <p><%= article.text %></p>
        <p><%= article.created_at %> | <%= link_to 'Show', article_path(article) %> | <%= link_to 'Edit', edit_article_path(article) %> | <%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div>
    <hr>
<% end %>