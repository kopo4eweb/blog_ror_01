<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<p><%= link_to 'Back', articles_path %></p>

<hr>
<p><b>Comments list</b></p>
<% @comments.each do |comment| %>
  <p>
  <b><%= comment.author %></b> | <em><%= comment.created_at %></em><br>
  <%= comment.body %>
  </p>
<% end %>

<hr>
<p><b>Add comments</b></p>
<% if user_signed_in? %>
  <%= form_for([@article, @article.comments.build]) do |f| %>
    <p>
      <%= current_user.username %>
    </p>
    <p>
        <%= f.label :body %><br>
        <%= f.text_area :body %>
    </p>
    <%= f.submit %>
  <% end %>
<% else %>
    <p>Sign In for write comments. <%= link_to 'Sign In', new_user_session_path %> 
    </p>
<% end %>