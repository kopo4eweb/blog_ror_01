<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<p><%= link_to 'Back', articles_path %></p>


<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
      <%= f.label :author %><br>
      <%= f.text_field :author %>
  </p>
  <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
  </p>
  <%= f.submit %>
<% end %>