<h1><%= t('articles.edit_article') %></h1>

<%= form_for :article, url: article_path(@article), method: :patch do |f| %>
    <% if @article && @article.errors.any? %>
        <ul>
            <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :text %><br>
        <%= f.text_area :text %>
    </p>
    <%= f.submit %>
<% end %>

<p><%= link_to 'Back', articles_path %></p>